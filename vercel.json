{
  "version": 2,
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "memory": 512,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/", "dest": "/api/index.ts" },
    { "src": "/api/(.*)", "dest": "/api/index.ts" }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run vercel-build"
}
